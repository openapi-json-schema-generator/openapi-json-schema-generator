from {{packageName}} import api_client, exceptions
{{#with requestBody}}
{{> model_templates/imports }}
{{#each content}}
{{#with this}}
    {{#with schema}}
        {{#unless getRefModule}}
from . import {{name.getSnakeCaseName}}
        {{/unless}}
    {{/with}}
