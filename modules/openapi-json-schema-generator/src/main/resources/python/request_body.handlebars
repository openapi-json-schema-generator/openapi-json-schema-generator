{{/each}}

parameter_oapg = api_client.RequestBody(
    content={
{{#each content}}
        '{{{@key}}}': api_client.MediaType(
    {{#with this}}
        {{#with schema}}
            {{#if getRefModule}}
            schema={{getRefModule}}.{{getRefClass}},
            {{else}}
            schema={{name.getSnakeCaseName}}.{{name.getCamelCaseName}},
            {{/if}}
        {{/with}}
    {{/with}}
        ),
{{/each}}
    },
{{#if required}}
    required=True,
{{/if}}
)
{{/with}}
