import abc
import dataclasses
import typing


@dataclasses.dataclass
class Server(abc.ABC):
    _url: str
    variables: typing.Optional[schemas.DictSchema] = None
    url: str = dataclasses.field(init=False)

    def __post_init__(self):
        if self.variables is None:
            self.url = self._url
            return
        url = self._url
        for (key, value) in self.variables.items():
            if value == schemas.unset:
                cast_value = schema.Schema_.default
            else:
                cast_value = value
            cast_value = typing.cast(str, cast_value)
            url = url.replace("{" + key + "}", cast_value)
        self.url = url

