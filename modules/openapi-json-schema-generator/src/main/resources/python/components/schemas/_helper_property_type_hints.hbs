{{#if requiredProperties}}

    {{#each requiredProperties}}
        {{#if @key.isValid}}
            {{#with this}}
                {{#if refInfo.refClass}}
{{@key.name}}: '{{> components/schemas/_helper_refclass_with_module }}'
                {{else}}
                    {{#if name}}
                        {{#if schemaIsFromAdditionalProperties}}
{{@key.name}}: Schema_.{{name.camelCaseName}}
                        {{else}}
{{@key.name}}: Schema_.Properties.{{name.camelCaseName}}
                        {{/if}}
                    {{else}}
{{@key.name}}: schemas.AnyTypeSchema
                    {{/if}}
                {{/if}}
            {{/with}}
        {{/if}}
    {{/each}}
{{/if}}
{{> components/schemas/_helper_getitems }}